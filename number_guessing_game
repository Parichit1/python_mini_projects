import random
count = 0
actual_number = random.randint(1, 100)
while True:
    try:
        input_number = int(input("Guess the number between 1 and 100: "))
        count += 1
        if input_number > actual_number:
            print("Too high!!")
        elif input_number < actual_number:
            print("Too low!!")
        else:
            print(f"Congrats! You guessed the number! in {count} tries.")
            break

    except ValueError:
        print("Invalid input, please enter a whole number.")
